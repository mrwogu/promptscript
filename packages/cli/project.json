{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": ["scope:cli", "type:app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/../../dist/packages/cli"],
      "options": {
        "commands": [
          "nx run cli:bundle",
          "mv dist/packages/cli/package.publish.json dist/packages/cli/package.json"
        ],
        "parallel": false
      },
      "dependsOn": ["^build"]
    },
    "bundle": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/cli",
        "main": "packages/cli/src/index.ts",
        "tsConfig": "packages/cli/tsconfig.lib.json",
        "assets": [
          "packages/cli/*.md",
          "packages/cli/bin/**/*",
          {
            "input": "packages/cli",
            "glob": "package.publish.json",
            "output": "."
          }
        ],
        "bundle": true,
        "platform": "node",
        "format": ["esm"],
        "minify": false,
        "thirdParty": true,
        "external": ["commander", "@inquirer/prompts", "ora", "chalk", "chokidar", "yaml"],
        "generatePackageJson": false
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "analyze-bundle": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test -n \"$CODECOV_TOKEN\" && npx @codecov/bundle-analyzer dist/packages/cli --bundle-name=promptscript-cli --upload-token=$CODECOV_TOKEN || echo 'Skipping bundle analysis (CODECOV_TOKEN not set)'",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build"]
    }
  }
}
